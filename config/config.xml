    <generic_values>
        <!--Configuration for Realm-->
        <realm_info>
            <default_realm_id>1</default_realm_id> <!-- Default REALMID. This will be displayed as default all places.  -->
            <multirealm>0</multirealm>             <!-- Multiple realms? -->
        </realm_info>

        <!--Configuration for news section.-->
        <news>
            <items_per_page>10</items_per_page>  <!-- News-Output items limit -->
            <defaultOpen>3</defaultOpen>     <!-- First N+1 items that are "opened" by default.-->
        </news>

        <!--Configuration for forum's-->
        <forum>
            <news_forum_id>1</news_forum_id>              <!-- forum id for "news" -->
            <bugs_forum_id>5</bugs_forum_id>              <!-- forum id for "bugtracker"  -->
            <ql4_forum_id>6</ql4_forum_id>               <!-- forum id for FAQ Forum/Quicklink4 in right menu -->

            <!-- If you want to use external forums ( example Phpbb , you must configure these values)  -->
            <externalforum>0</externalforum>              <!-- 1 = Use external forum     |    0 = Dont use external forum  -->
            <frame_forum>0</frame_forum>                <!-- 1 = Use Frame to external forum     |    0 = Redirect to external forum    -->
            <forum_external_link>https://singleplayerproject.com/viewtopic.php?f=4&amp;t=373</forum_external_link>        <!-- Url of external forum -->

            <!-- If you want to use external bugs tracker ( example sourceforge.net , you must configure these values)  -->
            <externalbugstracker>1</externalbugstracker>       <!-- 1 = Use external forum     |    0 = Dont use external Bugs Tracker   -->
            <frame_bugstracker>0</frame_bugstracker>         <!-- 1 = Use Frame to external forum     |    0 = Redirect to external Bugs Tracker -->
            <bugstracker_external_link>https://github.com/celguar/spp-classics-cmangos/issues</bugstracker_external_link> <!-- Url of external Bugs Tracker   -->

            <!-- Do you want to use external FAQ site? ( example forum topic) -->
            <faqsite_external_use>0</faqsite_external_use>
            <faqsite_external_link>0</faqsite_external_link>
			<!-- Url of external FAQ site - leave blank for internal forum -->
        </forum>

        <account_registrer>
            <enable_image_verfication>1</enable_image_verfication>  <!--  1 = Enable , 0 = Disable. .. Image activation, ( User must answer an image that gets created !/core/cache/randimg/ must have write permessions!!)-->
            <secret_questions_input>0</secret_questions_input>  <!-- Do you want to let the user have secret questions? -->
        </account_registrer>
    </generic_values>
	
	<!-- this is where you admins have control over which features in the "character tools" page, that users are allowed to use -->
	<character_tools>
		<rename>0</rename>                                <!-- Allow users to rename their characters via the "character tools" screen? 1=enable, 0=disable -->
		<re_customization>0</re_customization>            <!-- Allow users to re-customize their characters via the "character tools" screen -->
		<rename_points>1</rename_points>                  <!-- how many vote points are users charged to rename there characters? -->
		<customization_points>2</customization_points>    <!-- how many vote points are users charged to re-customize there characters? -->
	</character_tools>

    <!--
    * This is specified if you want to show the block that show information about your server rates.
    * Change the id_1 if your realm ha another id than 1. Then set mangos_world_conf to the MaNGOS
    * world CONFIG file location.
    * Example on windows: "C:\mangos\etc\mangos.conf"  | on linux "/opt/mangos/etc/mangosd.conf" )
    * Note! To show " Server rates " you must enable "server_rates" to 'yes'.
    * To add more config files you must add an extra id_# element.
    -->
    <mangos_conf_external>
        <!-- Where ID of realm = between the tags.-->
        <id_1>
            <mangos_world_conf>./config/mangosd.conf</mangos_world_conf>
        </id_1>
    </mangos_conf_external>



    <!--
     In this Config array you can configure what components on the site you want to show. Its formed in many section
     You type 0 or 1   -  1 means that you will show content.
     -->
    <components>

        <right_section>
            <quicklinks>1</quicklinks>
            <users_on_homepage>0</users_on_homepage>     <!--since "Users On Web Server" is currently under Server Information, requires server_information set to 1 also  -->
            <server_information>1</server_information>
            <server_rates>0</server_rates>
            <media>0</media>                             <!--screenshot of the day  -->
            <newbguide>0</newbguide>                     <!--new comer's guid -->
            <hitcounter>0</hitcounter>
        </right_section>

        <!--specify which parts show under server_information -->
        <server_information>
            <realm_status>1</realm_status>
            <server_ip>1</server_ip>
            <type>1</type>
            <language>1</language>
            <population>1</population>
            <accounts>1</accounts>
            <active_accounts>1</active_accounts>         <!--accounts active in last 2 weeks  -->
            <characters>1</characters>
            <online>1</online>
            <more_info>0</more_info>
        </server_information>

		<!--Specify which links appear under each section -->
        <left_section>
            <!--Community  -->
            <SppDiscord>1</SppDiscord>
            <BotsDiscord>1</BotsDiscord>
            <Teamspeak>0</Teamspeak>
            <donate>0</donate>
			<vote>0</vote>
			<chat>0</chat>

            <!--Workshop  -->
            <Realms_status>1</Realms_status>
            <Players_online>1</Players_online>
            <Honor>1</Honor>
            <Playermap>1</Playermap>                     <!--Enable or disable playermap page  -->
            <Characters>1</Characters>
            <Userlist>1</Userlist>
            <Statistic>1</Statistic>
            <ah_system>1</ah_system>                     <!--Auction House page  -->
            <talents>1</talents>
            <Armory>1</Armory>
            <Interactive_world_atlas>0</Interactive_world_atlas>	<!-- Display link to Interactive Atlas -->
            <Armor_sets>0</Armor_sets>								<!-- Display link to Armor Sets -->

            <!--Media -->
            <Screenshots>0</Screenshots>
			<Screenshotsize>0</Screenshotsize>		<!--This is in mb so 0.2 is 200k -->
            <Wallpapers>0</Wallpapers>
            <Upload_Wallpaper>0</Upload_Wallpaper>
            <Upload_Screenshot>0</Upload_Screenshot>

            <!--Support  -->
            <Commands>1</Commands>
            <Bug_tracker>1</Bug_tracker>
            <In_Game_Support>0</In_Game_Support>
            <Online_GMs>0</Online_GMs>

            <!--Game Guide -->
            <How_to_play>1</How_to_play>
			<wow_bc>0</wow_bc> 										<!-- Display link to WoW Burning Crusade info -->
			<wow_wrath>0</wow_wrath>								<!-- Display link to WoW WoTLK info -->
			<wow_cata>0</wow_cata>									<!-- Display link to WoW Catacylsm info -->

            <!--Account -->
            <Activate_account>0</Activate_account>
            <Character_copy>0</Character_copy>         <!-- This requires extra install of SQL and more config.  See the own config file Character copy system  -->
            <retrieve_pass>0</retrieve_pass>           <!-- Where users fill in secret questions to retrieve their pass. -->
            <Character_tools>0</Character_tools>
        </left_section>

    </components>

    <!--
     In this section you can configure the menu 'Character copy'.
     You have 2 things to configure: What account the horde characters is on and  what account the alliance characters is on.
    -->
    <character_copy_config>
        <!-- On what realm ID's should the character copy system work ? You can add sevral realms in this onbject.  -->
        <work_on_realms>
            <realm>1</realm>
        </work_on_realms>

        <!-- Id's of horde and alliance account ( Find in realm.account table ->[guid] ) . THESE MUST BE SET OR !NOTHING! WILL WORK!!!!   -->
        <accounts>
            <horde>0</horde>
            <alliance>0</alliance>
        </accounts>

        <general>
            <Player_Start_Money>0</Player_Start_Money>    <!-- How much gold should player start with ? ( This value is in copper )-->
            <Player_Start_Level>1</Player_Start_Level>    <!-- What level should the player start with ?  -->
        </general>
    </character_copy_config>


    <!--
     Here you can configure the donation administration.
    -->
    <donation>
        <!-- Your paypal email ( Paypal username ) -->
        <PayPal_Email>spp@spp.com</PayPal_Email>

        <!-- Default PayPal lang. Just keep it like this.  -->
        <paypallang>EN</paypallang>
    </donation>
	
    <!--
    Here you can enable MaNGOS core syncronizations.
    Forexample view of logs by web.
    TO USE THIS FUNCTION MANGOS PROGRAM MUST BE ON THE _SAME_ MACHINE AS THIS SITE!
    -->
    <core_work>
        <!-- First, do you want to enable this functions?  -->
        <enable>0</enable>

        <!-- Fill out the paths to your files.  -->
        <path>
            <gmlog/>
        </path>
    </core_work>

    <!-- A list of templates aviable.
     -->
    <templates>
        <template>vanilla</template>
		<template>tbc</template>
        <template>wotlk</template>
    </templates>

    <!-- Dynamic done by site. Dont touch this. -->
    <temp>
        <site_href>/</site_href>
        <site_domain>127.0.0.1</site_domain>
        <email_href>127.0.0.1</email_href>
        <base_href>http://127.0.0.1/</base_href>
    </temp>


</configs>
