        <change_template>0</change_template>                   <!-- Is users allowed to change template?  -->

        <results_per_page>10</results_per_page>                  <!-- Here you may set the number of results displayed per page in the armory. Default: 50 -->
        <images_per_page>5</images_per_page>                     <!--Here you may set the number of images displayed per page in the gallery. Default: 5  -->

       <!-- You can change these for now, until some online admin for this implented -->
        <change_email>0</change_email>                            <!-- Allow your users to change there emails? 1=yes 0=no -->
        <change_pass>0</change_pass>                              <!-- Allow your users to change there passwords? 1=yes 0=no -->
		<user_character_rename>0</user_character_rename>          <!-- Allow your users to change there character's names via account managment? 1=yes 0=no -->
        <debuginfo>0</debuginfo>
        <onlinelist_on>1</onlinelist_on>
        <req_reg_act>0</req_reg_act>                              <!-- Require users to activate there account before alowing to log in? Must have SMTP setup! -->
        <req_reg_key>0</req_reg_key>                              <!-- Require users to have an account key before being able to create an account? -->
		<req_reg_invite>0</req_reg_invite>                        <!-- Require users to be invited to your server, before being able to create an account? -->
        <banner_display>1</banner_display>
        <max_accounts_per_ip>0</max_accounts_per_ip>              <!-- How many accounts are users allowed to create per IP address -->
        <max_attachs_size>10485760</max_attachs_size>
        <posts_per_page>12</posts_per_page>
        <posts_per_star1>1</posts_per_star1>
        <posts_per_star2>30</posts_per_star2>
        <posts_per_star3>120</posts_per_star3>
        <posts_per_star4>250</posts_per_star4>
        <posts_per_star5>500</posts_per_star5>
        <site_register>1</site_register>                          <!-- Allow people to register? -->
        <topics_per_page>16</topics_per_page>
        <ts_display>0</ts_display>                                <!-- Show teamspeak? -->
        <users_per_page>40</users_per_page>                       <!-- Shows how many users online per page -->
		<ahitems_per_page>100</ahitems_per_page>                  <!-- Shows how many items per page in the Auction House page -->
        <allowed_attachs>jpg|gif|png|rar|zip|doc|txt|pdf|chm|torrent</allowed_attachs>
        <attachs_path>images/attachs/</attachs_path>
        <avatar_path>images/avatars/</avatar_path>
        <default_component>frontpage</default_component>
        <max_avatar_file>102400</max_avatar_file>
        <max_avatar_size>64x64</max_avatar_size>
        <site_cookie>mangosWeb</site_cookie>
        <site_email>spp@gmail.com</site_email>
        <site_encoding>utf-8</site_encoding>
        <site_title>World of Warcraft</site_title>
        <smiles_path>images/smiles/</smiles_path>
        <smtp_adress/>
        <smtp_password/>
        <smtp_username/>
        <ts_ip>your.teamspeakserver.com</ts_ip>
        <ts_port_udp>8767</ts_port_udp>
    </generic>


